<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taqtile.myfirstapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        <activity android:name=".activities.DisplayMessageActivity">
            android:parentActivityName=".MainActivity" >
            The meta-data tag is required if you support API level 15 and lower
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        -->

        <activity
            android:name=".activities.SignInActivity"
            android:label="Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ListUsersActivity"
            android:label="List users">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SignInActivity" />
        </activity>
        <activity
            android:name=".activities.UserDetailsActivity"
            android:label="Details"
            android:parentActivityName=".activities.ListUsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ListUsersActivity" />
        </activity>
        <activity
            android:name=".activities.CreateUserActivity"
            android:label="Create user"
            android:parentActivityName=".activities.ListUsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ListUsersActivity" />
        </activity>

        <activity android:name=".activities.EditUserActivity"
            android:label="Edit user"
            android:parentActivityName=".activities.UserDetailsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UserDetailsActivity" />
        </activity>
    </application>

</manifest>